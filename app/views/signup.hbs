
 <div class="container" style="margin-top: 70px;">
    <h1 class="well" style="background: #311B92; color: #FFF;">Registration</h1>
    {{# if errors }}
    {{# each errors }}
          <p class="alert alert-danger">{{ this.msg }}</p>
    {{/each}}
    {{/if}}

    {{# if error }}
         <p class="alert alert-danger">{{ error }}</p>
    {{/if}}

    {{# if msg }}
         <p class="alert alert-success">{{ msg }}</p>
    {{/if}}

    <div class="col-lg-12 well">
         <div class="row">
        <form action="/signup" method="post">
            <div class="col-sm-12">
                <div class="row">

                    <div class="col-sm-5 form-group">
                        <label>First Name</label>
                        <input name="firstName" value="" type="text" placeholder="Enter First Name Here.." class="form-control">
                    </div>

                    <div class="col-sm-5 form-group">
                        <label>Last Name</label>
                        <input name="lastName" value="" type="text" placeholder="Enter Last Name Here.." class="form-control">
                    </div>
                    <div class="col-sm-2 form-group">
                        <label>Gender</label>
                         <select name="gender" class="form-control">
                            <option disabled selected value> -- select an option -- </option>
                            <option>Male</option>
                            <option>Female</option>
                        </select>
                    </div>

                </div>	

                <div class="row">

                      <div class="col-sm-4 form-group">
                         <label>Email Address</label>
                         <input name="emailAddress" value="" type="text" placeholder="Enter Email Address Here.." class="form-control">
                      </div>

                       <div class="col-sm-4 form-group">
                         <label>Phone Number</label>
                        <input name="phoneNumber" value="" type="text" placeholder="Enter Phone Number Here.." class="form-control">
                      </div>
                       <div class="col-sm-4 form-group">
                         <label>Birth day</label>
                        <input name="dob" type="date" class="form-control">
                      </div>
                </div>
                
                <div class="row">
                    <div class="col-sm-2 form-group">
                        <label>Username</label>
                        <input name="username" value="" type="text" placeholder="Enter Username Here.." class="form-control">
                    </div>  
                    <div class="col-sm-5 form-group">
                        <label>Password</label>
                        <input name="password" value="" type="password" placeholder="Enter Password Here.." class="form-control">
                    </div>		
                    <div class="col-sm-5 form-group">
                        <label>Confirm Password</label>
                        <input name="confirmPassword" value="" type="password" placeholder="Enter Confirm Password Here.." class="form-control">
                    </div>	
                </div>

                <div class="form-group">
                    <label>Address</label>
                    <textarea name="livingAddress" placeholder="Enter Address Here.." rows="1" class="form-control"></textarea>
                </div>	
                <div class="row">
                    <div class="col-sm-6 form-group">
                        <label>City</label>
                        <!-- <input type="text" placeholder="Enter City Name Here.." class="form-control"> -->
                        <select name="livingCity" class="form-control" id="sel1">
                               <option disabled selected value> -- select an option -- </option>
                        </select>
                    </div>	
                    <div class="col-sm-6 form-group">
                        <label>State</label>
                        <!-- <input type="text" placeholder="Enter State Name Here.." class="form-control"> -->
                        <select name="livingDistrict" class="form-control" id="sel2">
                                <option disabled selected value> -- select an option -- </option>
                        </select>
                    </div>		
                </div>
                   <div  style="margin-bottom:30px;" class="g-recaptcha" data-sitekey="6Lcc1FkUAAAAAMh76uxtZ99FoAaBx5mbrQEKPuKU"></div>
                   
                 <button type="submit" class="btn btn-lg btn-info signup-submit">Submit</button>    
        </form> 
    </div>
    </div>
</div>
