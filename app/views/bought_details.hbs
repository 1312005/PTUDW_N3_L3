{{#section 'bigTitle'}} BOUGHT DETAILS {{/section}}

<div class="container">
    <div class="row" style="margin-top:40px;">
        <div class="col-md-12">
            <h3>Order Number: {{{genericDetail.orderId}}} <br/>at {{{genericDetail.dateFormat}}}</h3>
            <h4>Buyer Information</h4> 
            <p><strong>Name<strong>: {{{genericDetail.firstName}}} {{{genericDetail.lastName}}}</p>
            <p>Address: {{{genericDetail.deliveryAddress}}}, {{{genericDetail.city}}}, {{{genericDetail.province}}}</p>
            <p>State: {{{genericDetail.stateFormat}}}</p>
        </div>
    </div>
    <div class="row">
         <div class="col-md-12">
            <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Original Price</th>
                        <th>Discount</th>
                        <th>Quantity</th>
                        <th>Paid Amount</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each productDetail}}
                    <tr>
                        <td>{{{productName}}}</td>
                        <td>{{{price_per_unit}}}</td>
                        <td>
                            <span class="hightlight-discount">{{{discount}}}%</span>
                        </td>
                          <td>{{{productQuantity}}}</td>
                        <td>{{{totalAmount}}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <h4>Total: {{{genericDetail.totalAmount}}}</h4>
            <h4>Discount: {{{genericDetail.discount}}}</h4>
        </div>
        </div>
    </div>
</div>